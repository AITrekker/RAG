# Enterprise RAG Pipeline Environment Variables

# Database Configuration
DB_PASSWORD=enterprise_rag_password_change_me
DATABASE_URL=postgresql://enterprise_rag_user:enterprise_rag_password_change_me@database:5432/enterprise_rag

# For development, you can use SQLite instead:
# DATABASE_URL=sqlite:///app/data/db/enterprise_rag.db

# File Paths (override defaults)
MASTER_FOLDER_PATH=./data/master
SYNC_FOLDER_PATH=./data/sync

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Logging
LOG_LEVEL=INFO

# Vector Store Configuration
VECTOR_STORE_URL=http://vector-store:8000
CHROMA_SERVER_HOST=0.0.0.0
CHROMA_SERVER_HTTP_PORT=8000

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000

# Security (for future phases)
# JWT_SECRET_KEY=your-secret-key-here
# ENCRYPTION_KEY=your-encryption-key-here

# Model Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
GENERATIVE_MODEL=microsoft/DialoGPT-medium

# Tenant Configuration (for multi-tenant support)
DEFAULT_TENANT_ID=tenant1

# Sync Configuration
SYNC_INTERVAL_HOURS=1
MAX_FILE_VERSIONS=3
REPORT_RETENTION_DAYS=30

# Resource Limits
MAX_BATCH_SIZE=100
MAX_MEMORY_GB=8
MAX_GPU_MEMORY_GB=10
