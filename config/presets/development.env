# Development RAG Configuration  
# Optimized for fast iteration and testing

# === LLM Configuration ===
RAG_LLM_MODEL=gpt2-medium
RAG_TEMPERATURE=0.4
RAG_MAX_NEW_TOKENS=250
RAG_MAX_LENGTH=512
RAG_TOP_P=0.9
RAG_TOP_K=50
RAG_REPETITION_PENALTY=1.2
RAG_DO_SAMPLE=true
RAG_EARLY_STOPPING=true
RAG_ENABLE_QUANTIZATION=false

# === Retrieval Configuration ===
RAG_MAX_SOURCES=7
RAG_CONFIDENCE_THRESHOLD=0.3
RAG_MAX_CONTEXT_LENGTH=2500
RAG_SOURCE_PREVIEW_LENGTH=300

# === Response Quality ===
RAG_MAX_SENTENCES=5
RAG_MIN_SENTENCE_LENGTH=8
RAG_REMOVE_PROMPT_ARTIFACTS=true
RAG_ENSURE_PUNCTUATION=true

# === Performance ===
RAG_CACHE_DIR=./cache/transformers
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=16