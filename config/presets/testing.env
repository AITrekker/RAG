# Testing RAG Configuration
# Optimized for fast, consistent testing

# === LLM Configuration ===
RAG_LLM_MODEL=distilgpt2
RAG_TEMPERATURE=0.3
RAG_MAX_NEW_TOKENS=150
RAG_MAX_LENGTH=256
RAG_TOP_P=0.8
RAG_TOP_K=30
RAG_REPETITION_PENALTY=1.4
RAG_DO_SAMPLE=false
RAG_EARLY_STOPPING=true
RAG_ENABLE_QUANTIZATION=true

# === Retrieval Configuration ===
RAG_MAX_SOURCES=3
RAG_CONFIDENCE_THRESHOLD=0.5
RAG_MAX_CONTEXT_LENGTH=1000
RAG_SOURCE_PREVIEW_LENGTH=100

# === Response Quality ===
RAG_MAX_SENTENCES=3
RAG_MIN_SENTENCE_LENGTH=10
RAG_REMOVE_PROMPT_ARTIFACTS=true
RAG_ENSURE_PUNCTUATION=true

# === Performance ===
RAG_CACHE_DIR=./cache/test_models
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=8